<h1>メニューリストから検索</h1>
<p>
<%= form_tag(controller: "menus", action: "search") do %>
    <%= text_field_tag("input") %>
    <%= submit_tag("検索") %>
<% end %>
</p>
<p>
<%= button_to "全メニュー表示", {controller: "menus", action: "search"} %>
<pre>
<table>
    <% if @data.present? %>
        <% @data.each do |obj| %>
        <tr>
            <td><%= obj.id %></td>
            <td><%= obj.menu_name %></td>
            <td><%= obj.url %></td>
            <td><%= obj.date %></td>
            <td><%= obj.check %></td>
        </tr>
        <% end %>
    <% end %>
</table>
</pre>