<pre>
<% if @edit_data.id.present? then %>
    <%= form_for(@edit_data, url:{controller: "menus", action: "update", id:@edit_data.id}) do |f|%>
        <table>
            <tr>
                <th>料理名</th>
                <td><%= f.text_field :menu_name %></td>
            </tr>            
            <tr>
                <th>レシピURL</th>
